<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- TextView padding and size in activity_ingredient steps -->
    </style>

    <!-- Ingredient & Steps Title Theme -->
    <style name="FragmentTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Ingredient List Theme -->
    <style name="FragmentIngListStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Ingredient/Steps List Theme -->
    <style name="FragmentStepsListStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="FragmentStepsDescriptionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="WidgetProviderListStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#ffffff</item>

    </style>


    <!-- Button Theme -->
    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
    </style>

</resources>
